@model eCheck3.Models.ResetPasswordWithTwoFactorViewModel

@{
    ViewBag.Title = "ResetPasswordWithTwoFactor";
}

<h2>Phone Verification</h2>

@using (Html.BeginForm("ResetPasswordWithTwoFactor", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.Hidden("userId", @Model.userID)
    @Html.Hidden("code", @Model.code)
    @Html.Hidden("phone", @Model.phone)


    <div class="row">
        <div class="col-md-6">
            <div class="form-group phonegroup">
                @Html.LabelFor(m => m.SMSCode, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.SMSCode, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group phonegroup">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" class="btn btn-primary" value="Validate Code" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well well-lg">
                <h4>Reset Password</h4>
                <p>
                    You have been sent a code to the phone number registered to your account, ending in @Html.Raw(@Model.phone)
                    Enter the valid code, and you will be able to reset your password
                </p>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
